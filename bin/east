#!/bin/sh

set -e

SCRIPTPATH="$( cd "$(dirname "$0")" ; pwd -P )"

if [ -d /runner ]; then
  exec east "$@"
elif [ -f /.dockerenv ]; then
  # I'm running inside docker
  exec npx east "$@"
elif [ -e "$SCRIPTPATH/../migrations" ]; then
  # Hello OSS Developer!
  exec npx east "$@"
else
  exec ${SCRIPTPATH}/run web_v2 bin/east "$@"
fi
