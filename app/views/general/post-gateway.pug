extends ../_layout

block vars
	- var suppressNavbar = true
	- var suppressFooter = true

block content
	meta(name="ol-gateway-data" data-type="json" content={ params: form_data })

	.content.content-alt
		.container
			.row
				.col-md-6.col-md-offset-3
					.card
						p.text-center(ng-cloak) {{translate('processing_your_request')}}

	form(
		ng-controller="PostGatewayController",
		ng-init="handleGateway();"
		id='gateway' method='POST')
