each institution in managedInstitutions
	p
		| You are a manager of
		|
		strong= institution.name
	p
		a.btn.btn-primary(href="/metrics/institutions/" + institution.v1Id)
			i.fa.fa-fw.fa-line-chart
			| &nbsp;
			| View metrics
	p
		a(href="/institutions/" + institution.v1Id + "/hub")
			i.fa.fa-fw.fa-user-circle
			| &nbsp;
			| View hub
	p
		a(href="/manage/institutions/" + institution.v1Id + "/managers")
			i.fa.fa-fw.fa-users
			| &nbsp;
			| Manage institution managers
	p
		form(async-form="institutionalEmail", name="institutionalEmailForm", method="POST", action="/institutions/" + institution.v1Id + "/emailSubscription", novalidate)
			input(type="hidden", name="_csrf", value=csrfToken)
			p
				| #{institution.metricsEmail.optedOutUserIds}
				if user._id in institution.metricsEmail.optedOutUserIds
					span You're unsubscribed from monthly metrics update emails
				else
					span You're subscribed to monthly metrics update emails
			button.btn.btn-primary(type='submit') #{translate("change")}
	hr
