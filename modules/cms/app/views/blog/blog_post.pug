extends ../layout

//- Page for a single blog post

block content_cms
	- var popular_tags = ['publishers', 'events', 'latex', 'tech', 'press', 'features', 'guides', 'institutions', 'case studies', 'advisors']
	.content-container
		section
			.row.section-row
				.col-xs-12
					.page-header
						h1
							a(href="/blog") #{translate('blog')}
						
		section.blog(ng-cloak ng-controller="BlogController")
			.row.section-row
				.col-xs-12.col-md-8
					ul.blog-list
						li.card
							.card-header
								h2 !{title}
							if (authorDisplay || publishDatePretty)
								small Posted
									if (authorDisplay)
										|  by #{authorDisplay}
									if (publishDatePretty)
										|  on #{publishDatePretty}

							mathjax(delimiter="no-single-dollar") !{content}

							if tag
								.row
									.col-sm-12
										+blog_tags(tagsPretty, 'Tags')

				.col-sm-12.col-md-4
					+sidebar_blog
	script(src=mathJaxPath) 