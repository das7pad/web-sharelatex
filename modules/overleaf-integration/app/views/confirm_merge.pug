extends ../../../../app/views/layout

block content
	.content.content-alt
		.container
			.row
				.col-md-8.col-md-offset-2
					.card
						.page-header
							h1 Overleaf and ShareLaTeX are Joining Forces
						p.text-center
							img(
								src="/img/ol_plus_sl.png"
								style="width: 50%"
							)
						p
							| Because you also have a ShareLaTeX account with the email
							| address #[strong #{email}], we need your permission in
							| ShareLaTeX to merge your accounts.

						p.text-center
							a(href=redirect_url).btn.btn-primary Go to ShareLaTeX to confirm
